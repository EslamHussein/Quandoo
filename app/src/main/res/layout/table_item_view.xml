<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent">

        <TextView
            android:id="@+id/text_view_table_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            style="@style/WhiteBoldBodyTextView"
            tools:text="Number: 112" />


        <ImageView
            android:id="@+id/image_view_table"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_below="@id/text_view_table_number"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:src="@drawable/table"
            android:tint="#ffffff" />
    </RelativeLayout>


</android.support.v7.widget.CardView>